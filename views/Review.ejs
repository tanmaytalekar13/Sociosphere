<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reviews for <%= provider.name %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/52is0br7U0g4Fbyo5yFmdF+9fakpFSSau7u5xj" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="container mx-auto bg-white shadow-lg rounded-lg p-8 overflow-hidden">
    <!-- Provider Information -->
    <div class="flex items-center justify-center mb-6 flex-col gap-4">
      <img src="<%= provider.image %>" alt="<%= provider.name %>" class="w-36 h-36 rounded-full border-4 border-indigo-600 shadow-lg">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-2"><%= provider.name %></h1>
        <p class="text-lg text-indigo-600 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 inline text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .587l3.668 7.572 8.332 1.151-6.065 5.915 1.451 8.275-7.386-3.917-7.386 3.917 1.451-8.275-6.065-5.915 8.332-1.151z" />
            </svg>
            <span class="text-yellow-400 font-semibold text-2xl ml-4"><%= provider.averageRating %></span>
          </p>
          
          

      </div>
    </div>

    <!-- Reviews Section -->
    <% if (reviews.length > 0) { %>
      <div class="space-y-6">
        <% reviews.forEach(review => { %>
          <div class="bg-gray-50 p-6 rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition duration-300 ease-in-out">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-xl font-semibold text-gray-800 flex items-center">
                <i class="fas fa-user-circle text-gray-600 mr-2"></i><%= review.userName %>
              </h2>
              <div class="flex items-center">
                <span class="text-yellow-400">
                  <% for (let i = 0; i < review.rating; i++) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 .587l3.668 7.572 8.332 1.151-6.065 5.915 1.451 8.275-7.386-3.917-7.386 3.917 1.451-8.275-6.065-5.915 8.332-1.151z" />
                    </svg>
                  <% } %>
                </span>
              </div>
            </div>
            <p class="text-sm text-gray-500 mb-3 flex items-center">
              <i class="fas fa-calendar-alt text-gray-400 mr-1"></i><%= new Date(review.date).toLocaleDateString() %>
            </p>
            <p class="text-gray-800 leading-relaxed"><%= review.reviewText %></p>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="bg-gray-50 p-4 rounded-lg shadow-md border border-gray-200 flex items-center justify-center">
        <p class="text-gray-600 font-medium flex items-center">
          <i class="fas fa-comment-dots text-gray-500 mr-2"></i>No reviews yet. Be the first to leave a review!
        </p>
      </div>
    <% } %>
  </div>
</body>
</html>
