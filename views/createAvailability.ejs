<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Provider Availability</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="max-w-3xl mx-auto bg-white p-8 shadow-lg rounded-lg mt-10">
        <h2 class="text-3xl font-semibold mb-6 text-gray-800">Set Your Availability</h2>
        
        <form action="/provider/availability" method="POST">
            <!-- Availability Slots -->
            <div id="availability" class="space-y-4">
                <div class="flex space-x-2 mb-4">
                    <select name="availability[0][day]" class="p-2 border border-gray-300 rounded w-1/3" required>
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                        <option value="Sunday">Sunday</option>
                    </select>
                    <input type="time" name="availability[0][startTime]" class="p-2 border border-gray-300 rounded w-1/3" required>
                    <input type="time" name="availability[0][endTime]" class="p-2 border border-gray-300 rounded w-1/3" required>
                </div>
            </div>
            
            <!-- Add More Availability Button -->
            <div class="mt-4">
                <button type="button" id="addAvailability" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">Add More Availability</button>
            </div>

            <!-- Submit Button -->
            <div class="mt-6">
                <button type="submit" class="w-full py-2 bg-green-500 text-white rounded hover:bg-green-600 transition">Submit</button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('addAvailability').addEventListener('click', function() {
            const availabilityDiv = document.getElementById('availability');
            const currentSlots = availabilityDiv.children.length;
            
            const newAvailability = document.createElement('div');
            newAvailability.classList.add('flex', 'space-x-2', 'mt-3');
            newAvailability.innerHTML = `
                <select name="availability[${currentSlots}][day]" class="p-2 border border-gray-300 rounded w-1/3" required>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                    <option value="Saturday">Saturday</option>
                    <option value="Sunday">Sunday</option>
                </select>
                <input type="time" name="availability[${currentSlots}][startTime]" class="p-2 border border-gray-300 rounded w-1/3" required>
                <input type="time" name="availability[${currentSlots}][endTime]" class="p-2 border border-gray-300 rounded w-1/3" required>
            `;
            
            availabilityDiv.appendChild(newAvailability);
        });
    </script>
</body>
</html>