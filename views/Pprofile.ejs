<%- include('./partials/header'); %>
<body class="bg-gray-100">

  <%- include('./partials/adminNav'); %>

  <div class="container mx-auto p-6">
    <!-- Provider Details Section -->
    <div class="bg-white shadow-lg rounded-lg p-8 border-t-4 border-blue-500">
      <h2 class="text-3xl font-bold text-gray-800 mb-6">Provider Details</h2>

      <!-- Basic Information -->
      <div class="mb-8 space-y-4">
        <h3 class="text-2xl font-semibold text-gray-700">Basic Information</h3>
        <div class="space-y-2">
          <p><strong class="text-gray-600">Name:</strong> <%= provider.name %></p>
          <p><strong class="text-gray-600">Email:</strong> <%= provider.email %></p>
          <p><strong class="text-gray-600">Contact Number:</strong> <%= provider.contactNumber || 'Not Provided' %></p>
          <p><strong class="text-gray-600">Category:</strong> <%= provider.category.name %></p>
          <p><strong class="text-gray-600">Status:</strong> <%= provider.status %></p>
          <p><strong class="text-gray-600">Charges:</strong> Rs. <%= provider.charges %></p>
          <p><strong class="text-gray-600">Experience:</strong> <%= provider.experience || 'Not Provided' %></p>
        </div>
      </div>

      <!-- Availability -->
      <div class="mb-8 space-y-4">
        <h3 class="text-2xl font-semibold text-gray-700">Availability</h3>
        <% if (provider.availability.length > 0) { %>
          <ul class="divide-y divide-gray-200">
            <% provider.availability.forEach(slot => { %>
              <li class="py-4">
                <div class="flex justify-between">
                  <p><strong class="text-gray-600">Day:</strong> <%= slot.day %></p>
                  <p><strong class="text-gray-600">Time:</strong> <%= slot.startTime %> - <%= slot.endTime %></p>
                </div>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-gray-600">No availability slots provided.</p>
        <% } %>
      </div>

      <!-- Button to go back -->
      <div class="flex justify-end">
        <a href="/admin/requests" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg shadow-md transition duration-200">
          Back to Providers List
        </a>
      </div>
    </div>
  </div>

  <%- include('./partials/footer'); %>

</body>
