<%- include('./partials/header'); %>

<body>
  <%- include('./partials/adminNav'); %>

  <div class="bg-[#f9fafb] py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-[#252956] mb-8">Contact Us</h2>

      <div class="lg:grid lg:grid-cols-2 lg:gap-8">
        <!-- Contact Information Section -->
        <div class="mb-8 lg:mb-0">
          <h3 class="text-2xl font-semibold text-[#252956] mb-4">Get in Touch</h3>
          <p class="text-lg text-gray-700 mb-6">
            If you have any questions or would like to reach out, please feel free to contact us.
          </p>
          <div class="mb-4">
            <p class="font-semibold text-[#252956]">Address:</p>
            <p class="text-gray-700">123 Main Street, City, Country</p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-[#252956]">Phone:</p>
            <p class="text-gray-700">+123 456 7890</p>
          </div>
          <div class="mb-4">
            <p class="font-semibold text-[#252956]">Email:</p>
            <p class="text-gray-700">contact@yourcompany.com</p>
          </div>
        </div>

        <!-- Contact Form Section -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h3 class="text-2xl font-semibold text-[#252956] mb-6">Send Us a Message</h3>
          <form action="/contact" method="POST">
            <!-- Name -->
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
            </div>

            <!-- Email -->
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-700">Your Email</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
            </div>

            <!-- Subject -->
            <div class="mb-4">
              <label for="subject" class="block text-sm font-medium text-gray-700">Subject</label>
              <input type="text" id="subject" name="subject" required class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
            </div>

            <!-- Message -->
            <div class="mb-6">
              <label for="message" class="block text-sm font-medium text-gray-700">Your Message</label>
              <textarea id="message" name="message" rows="4" required class="w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500"></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-[#F5B800] hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer'); %>
</body>
